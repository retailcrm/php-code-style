{
    "name": "retailcrm/php-code-style",
    "description": "Defaults for php linters and code style fixers",
    "type": "library",
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2 >=v2.17"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "process-timeout": 600,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": { "Retailcrm\\": "src/Retailcrm" }
    }
}
